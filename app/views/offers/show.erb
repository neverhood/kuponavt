<% content_for :head do %>
  <%= stylesheet_link_tag 'single_offer' %>
  <%= javascript_include_tag 'single_offer' %>
<% end %>

  <div id='offer-plus-arrows' data-id='<%= @offer.id %>' style='width:960px'>
      <%= render partial: 'single_offer', locals: { offer: @offer } %>
  </div>


<div id='neighbors'>
	<%= { before: @before, after: @after }.to_json %>
</div>

<div id='before' class='hidden'>
	<% if @before.count > 0 %>
		<% @before.last(3).each do |id| %>
			<%= render(partial: 'single_offer', locals: { offer: Offer.find(id) }) %>
		<% end %>
	<% end %>
</div>

<div id='after' class='hidden'>
	<% if @after.count > 0 %>
		<% @after.first(3).each do |id| %>
			<%= render(partial: 'single_offer', locals: { offer: Offer.find(id) }) %>
		<% end %>
	<% end %>
</div>